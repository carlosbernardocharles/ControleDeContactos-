@model ContactoModel
@{
    ViewData["Title"] = "Confirmacao apagar o contacto";
}
<div class="text-center">
    <h3>Deseja apagar realmente o contacto (@Model.NomeContacto)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contacto" asp-action="Index">Cancelar Exclusao</a>
<a class="btn btn-secondary btn-block" asp-controller="Contacto" asp-action="Apagar"  asp-route-id="@Model.Id" role="button">Confirmar Exclusao</a>
