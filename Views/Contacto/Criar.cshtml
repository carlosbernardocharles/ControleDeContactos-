@model ContactoModel;
<div class="text-center">

    <h1 class="display-4">Criar  Contactos</h1>


</div>
<form asp-controller="Contacto" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="NomeContacto" class="form-control" id="Nome"  placeholder="Digite o Nome do Contacto">
       
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="Email" placeholder="Digite o Email do Contacto">
    </div>
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" id="Email" placeholder="Digite o Celular do Contacto">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contacto" asp-action="Index" role="button">Voltar</a>
</form>